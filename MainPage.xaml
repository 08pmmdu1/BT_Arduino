<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BTArduino.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <ListView 
                x:Name="btDevices"
                HasUnevenRows="True"
                SeparatorColor="Red">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding Description}" ></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label x:Name="btState"
                Text="{Binding btState}" />
            
            <Button Text="Scan" 
            Clicked="OnScanButtonCliked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
